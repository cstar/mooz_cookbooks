#!/bin/bash

cd <%=@data_path%>
mv <%=@source[:name]%> <%=@source[:name]%>.prev
<%=@source[:command]%>
result=$?

numlines=`wc -l <%=@source[:name]%> | awk {' print $1 '}
if [[ $result -eq 0 && $numlines -ne 0 ]]
then
  cd <%=@app_path%>
 ./import <%=@source[:importer]%>
 exit 0
else
  echo "Erreur d'importation"
  exit 1
fi