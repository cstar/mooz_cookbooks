#!/bin/bash

cd <%=@data_path%>
mv <%=@source[:name]%> <%=@source[:name]%>.prev
<%=@source[:command]%>
result=$0

numlines=`wc -l <%=@source[:name]%> | cut -f 5 -d " "`
if [[ $result -ne 0 && $numlines -ne 0 ]]
then
  cd <%=@app_path%>
 ./import <%=@source[:importer]%>
 exit 0
else
  echo "Erreur d'importation"
  exit 1
fi